<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <h1 class="heading">Welcome to URL Shortener</h1>
  <div class="box">
    <form action="/url" method="post">
      <input type="text" name="redirectUrl" placeholder="Enter your url">
      <button>Submit</button>
    </form>
    <!-- result -->
    <% if (locals.shortId) { %>
    <p>URL genrated is:
      <a target="_blank" href="http://localhost:8000/url/<%= shortId%>">http://localhost:8000/url/<%= shortId%></a>
    </p>
    <% } %>
    <% if (locals.allUrls) { %>
    <div class="results">
      <table id="res__table">
        <thead>
          <tr>
            <th>S.no</th>
            <th>URL</th>
            <th>Short Id</th>
            <th>Total clicks</th>
          </tr>
        </thead>
        <tbody>
          <% allUrls?.map((url, index)=> { %>
          <tr>
            <td>
              <%= index + 1 %>
            </td>
            <td>
              <%= url?.redirectUrl %>
            </td>
            <td>
              <%= url?.shortId %>
            </td>
            <td>
              <%= url?.visitHistory?.length %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </div>
</body>

</html>